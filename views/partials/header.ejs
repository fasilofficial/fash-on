<header class="header-area header-style-3 header-height-2">
  <div class="header-top header-top-ptb-1 d-none d-lg-block">
    <div class="container">
      <div class="row align-items-center justify-content-between">
        <div class="col-xl-3 d-flex justify-content-start col-lg-4">
          <div class="header-info">
            <ul>
              <li>
                <i class="fi-rs-smartphone"></i>
                <a href="#">(+91)9207517789</a>
              </li>
              <li>
                <i class="fi-rs-marker"></i><a href="/user/contact">Our location</a>
              </li>
            </ul>
          </div>
        </div>
        <div class="col-xl-3 d-flex justify-content-end col-lg-4">
          <div class="header-info header-info-right">
            <form action="/logout" method="POST">
              <button class="btn-sm border-0 outline-0" type="submit">
                Logout
              </button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="header-middle header-middle-ptb-1 d-none d-lg-block">
    <div class="container">
      <div class="header-wrap">
        <div class="logo logo-width-1">
          <a href="/user"><img src="/assets/imgs/theme/logo.svg" alt="logo" /></a>
        </div>
        <div class="header-right">
          <div class="search-style-2">
            <form action="/user/search" method="POST">
              <input type="text" name="searchTerm" required id="searchTerm"
                value="<%= locals?.searchTerm ? searchTerm : '' %>" placeholder="Search for items..." />
              <button class="btn btn-sm" type="submit">Search</button>
            </form>
          </div>
          <div class="header-action-right">
            <div class="header-action-2">
              <div class="header-action-icon-2">
                <a href="/user/wishlist">
                  <img class="svgInject" alt="Fashon" src="/assets/imgs/theme/icons/icon-heart.svg" />
                  <% if (locals?.userWishlist && userWishlist?.wishlistItems.length> 0) { %>
                    <span class="pro-count blue">
                      <%= userWishlist.wishlistItems.length %>
                    </span>
                    <% } %>
                </a>
              </div>
              <div class="header-action-icon-2">
                <a class="mini-cart-icon" href="/user/cart">
                  <img alt="Fashon" src="/assets/imgs/theme/icons/icon-cart.svg" />
                  <% if (locals?.userCart && userCart?.cartItems.length> 0) { %>
                    <span class="pro-count blue">
                      <%= userCart?.cartItems.length %>
                    </span>
                    <% } %>
                </a>
              </div>
              <div class="header-action-icon-2">
                <a href="/user/profile?tab=dashboard">
                  <img class="svgInject" alt="Fashon" src="/assets/imgs/theme/icons/icon-user.png" />
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="header-bottom header-bottom-bg-color sticky-bar">
    <div class="container">
      <div class="header-wrap header-space-between position-relative main-nav">
        <div class="logo logo-width-1 d-block d-lg-none">
          <a href="/user"><img src="/assets/imgs/theme/logo.svg" alt="logo" /></a>
        </div>
        <div class="header-nav d-none d-lg-flex">
          <div class="main-categori-wrap d-none d-lg-block">
            <a class="categori-button-active" href="#">
              <span class="fi-rs-apps"></span> Browse Categories
            </a>
            <div class="categori-dropdown-wrap categori-dropdown-active-large">
              <ul>
                <li>
                  <a href="/user/products?category=women"><i class="Fashon-font-dress"></i>Women's Clothing</a>
                </li>
                <li>
                  <a href="/user/products?category=men"><i class="Fashon-font-tshirt"></i>Men's Clothing</a>
                </li>
                <li>
                  <a href="/user/products?category=kids"><i class="Fashon-font-tshirt"></i>Kids's Clothing</a>
                </li>
              </ul>
            </div>
          </div>
          <div class="main-menu main-menu-padding-1 main-menu-lh-2 d-none d-lg-block">
            <nav>
              <ul>
                <li>
                  <a class="<%= locals?.path == '/' ? 'active' : ''%>" href="/user">Home</a>
                </li>
                <li>
                  <a class="<%= locals?.path == '/products' ? 'active' : ''%>" href="/user/products">Shop</a>
                </li>
                <li>
                  <a class="<%= locals?.path == '/wishlist' ? 'active' : ''%>" href="/user/wishlist">Wishlist</a>
                </li>
                <li>
                  <a class="<%= locals?.path == '/cart' ? 'active' : ''%>" href="/user/cart">Cart</a>
                </li>
                <li>
                  <a class="<%= locals?.path == '/orders' ? 'active' : ''%>" href="/user/orders">Orders</a>
                </li>
                <li>
                  <a class="<%= locals?.path == '/coupons' ? 'active' : ''%>" href="/user/coupons">Coupons</a>
                </li>
                <li>
                  <a class="<%= locals?.path == '/about' ? 'active' : ''%>" href="/user/about">About</a>
                </li>
                <li>
                  <a class="<%= locals?.path == '/contact' ? 'active' : ''%>" href="/user/contact">Contact</a>
                </li>
              </ul>

            </nav>
          </div>
        </div>
        <div class="header-action-right d-block d-lg-none">
          <div class="header-action-2">
            <div class="header-action-icon-2">
              <a href="/user/wishlist">
                <img class="svgInject" alt="Fashon" src="/assets/imgs/theme/icons/icon-heart.svg" />
                <% if (locals?.userWishlist && userWishlist?.wishlistItems.length> 0) { %>
                  <span class="pro-count blue">
                    <%= userWishlist.wishlistItems.length %>
                  </span>
                  <% } %>
              </a>
            </div>
            <div class="header-action-icon-2">
              <a class="mini-cart-icon" href="/user/cart">
                <img alt="Fashon" src="/assets/imgs/theme/icons/icon-cart.svg" />
                <% if (locals?.userCart && userCart?.cartItems.length> 0) { %>
                  <span class="pro-count blue">
                    <%= userCart?.cartItems.length %>
                  </span>
                  <% } %>
              </a>
            </div>
            <div class="header-action-icon-2 d-block d-lg-none">
              <div class="burger-icon burger-icon-white">
                <span class="burger-icon-top"></span>
                <span class="burger-icon-mid"></span>
                <span class="burger-icon-bottom"></span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</header>
