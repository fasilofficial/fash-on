<body>
  <%- include('../partials/loading.ejs') %> <%- include('../partials/header.ejs') %>
      <main class="main">
        <div class="page-header breadcrumb-wrap">
          <div class="container">
            <div class="breadcrumb">
              <a href="/user" rel="nofollow">Home</a>
              <span></span> Account
            </div>
          </div>
        </div>
        <section class="pt-150 pb-150">
          <div class="container">
            <div class="row">
              <div class="col-lg-10 m-auto">
                <% if (locals.messages.info) { %>
                  <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <%= messages.info %>
                      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                  </div>
                  <% } %>
                    <% if (locals.messages.error) { %>
                      <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <%= messages.error %>
                          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                      </div>
                      <% } %>
                        <div class="row">
                          <div class="col-md-3">
                            <div class="dashboard-menu">
                              <ul class="nav flex-column" role="tablist">
                                <li class="nav-item">
                                  <a class="nav-link <%= locals?.tab == 'dashboard' ? 'active' : ''%>"
                                    id="dashboard-tab" data-bs-toggle="tab" href="#dashboard" role="tab"
                                    aria-controls="dashboard" aria-selected="false"><i
                                      class="fi-rs-settings-sliders mr-10"></i>Dashboard</a>
                                </li>
                                <li class="nav-item">
                                  <a class="nav-link <%= locals?.tab == 'orders' ? 'active' : ''%>" id="orders-tab" data-bs-toggle="tab" href="#orders" role="tab"
                                    aria-controls="orders" aria-selected="false"><i
                                      class="fi-rs-shopping-bag mr-10"></i>Orders</a>
                                </li>
                                <li class="nav-item">
                                  <a class="nav-link <%= locals?.tab == 'address' ? 'active' : ''%>" id="address-tab"
                                    data-bs-toggle="tab" href="#address" role="tab" aria-controls="address"
                                    aria-selected="true"><i class="fi-rs-marker mr-10"></i>My
                                    Address</a>
                                </li>
                                <li class="nav-item">
                                  <a class="nav-link <%= locals?.tab == 'details' ? 'active' : ''%>"
                                    id="account-detail-tab" data-bs-toggle="tab" href="#account-detail" role="tab"
                                    aria-controls="account-detail" aria-selected="true"><i
                                      class="fi-rs-user mr-10"></i>Account details</a>
                                </li>
                              </ul>
                            </div>
                            <form class="mt-3" action="/logout" method="POST">
                              <button class="btn-sm" type="submit">Logout</button>
                            </form>
                          </div>
                          <div class="col-md-8">
                            <div class="tab-content dashboard-content">
                              <div class="tab-pane fade <%= locals?.tab == 'dashboard' ? 'active show' : ''%>"
                                id="dashboard" role="tabpanel" aria-labelledby="dashboard-tab">
                                <div class="card">
                                  <div class="card-header">
                                    <h5 class="mb-0">
                                      Hello <%= user.firstName + " " + user.lastName %>!
                                    </h5>
                                  </div>
                                  <div class="card-body">
                                    <table>
                                      <tbody>
                                        <tr>
                                          <th><strong>First Name</strong></th>
                                          <td><%= user.firstName %></td>
                                        </tr>
                                        <tr>
                                          <th><strong>Last Name</strong></th>
                                          <td><%= user.lastName %></td>
                                        </tr>
                                        <tr>
                                          <th><strong>Email</strong></th>
                                          <td><%= user.email %></td>
                                        </tr>
                                        <tr>
                                          <th><strong>Phone</strong></th>
                                          <td><%= user.phone %></td>
                                        </tr>
                                      </tbody>
                                    </table>
                                    <a href="/user/profile?tab=details">Edit account details</a>
                                  </div>
                                </div>
                              </div>
                              <div class="tab-pane fade <%= locals?.tab == 'orders' ? 'active show' : ''%>" id="orders"
                                role="tabpanel" aria-labelledby="orders-tab">
                                <div class="card">
                                  <div class="card-header">
                                    <h5 class="mb-0">Your Orders</h5>
                                  </div>
                                  <div class="card-body">
                                    <div class="table-responsive">
                                      <table class="table">
                                        <thead>
                                          <tr>
                                            <th>Order No.</th>
                                            <th>Date</th>
                                            <th>Status</th>
                                            <th>Total Amount</th>
                                            <th>Actions</th>
                                          </tr>
                                        </thead>
                                        <tbody>
                                          <% if (locals?.userOrders) { %>
                                            <% userOrders.forEach((order, index) => { %>
                                              <tr>
                                                <td>#<%= index+1 %></td>
                                                <td><%= moment(order.createdAt).format("DD/MM/YYYY - ddd") %></td>
                                                <td class="<%= order.status == 'pending' ? 'text-warning' :  order.status == 'cancelled' ? 'text-danger' : order.status == 'delivered' ? 'text-success' : 'text-primary' %> text-capitalize"><%= order.status %></td>
                                                <td>â‚¹<%= order.totalAmount %> for <%= order.totalQuantity %> item</td>
                                                <td class="text-center">
                                                  <% if (order.status != 'delivered' && order.status != 'cancelled') { %>
                                                    <a class="btn-sm btn-danger" href="/admin/orders/cancel/<%= order._id %>?source=profile">Cancel</a>  
                                                  <% } %>
                                                </td>
                                              </tr>
                                            <% }) %>
                                          <% } %>
                                        </tbody>
                                      </table>
                                    </div>
                                  </div>
                                </div>
                              </div>
                              <div class="tab-pane fade <%= locals?.tab == 'address' ? 'active show' : ''%>"
                                id="address" role="tabpanel" aria-labelledby="address-tab">
                                <div class="row">
                                  <% user?.addresses.forEach((address, index)=> { %>
                                    <div class="col-lg-4 mb-20">
                                      <div class="card mb-3 mb-lg-0">
                                        <div class="card-header">
                                          <h5 class="mb-0">
                                            <%= address.addressType + " " +'Address' %>
                                          </h5>
                                        </div>
                                        <div class="card-body">
                                          <address>
                                            <strong>
                                              <%= address.fullName %><br />
                                            </strong>
                                            <%= address.street %><br />
                                              <%= address.city %><br />
                                                <%= address.state %> - <%= address.pincode %><br /><br />
                                                    Phone: <%= address.phone %><br />
                                                      Alt phone: <%= address.altPhone %><br />
                                          </address>
                                        </div>
                                        <div class="card-footer text-end">
                                          <a class="text-danger" href="/user/deleteAddress/<%= address._id %>"><i class="fi-rs-trash"></i></a>
                                        </div>
                                      </div>
                                    </div>
                                    <% }) %>
                                </div>
                                <div class="row mt-10">
                                  <div class="col">
                                    <div class="card mb-3 mb-lg-0">
                                      <div class="card-header">
                                        <h5 class="mb-0">Add Address</h5>
                                      </div>
                                      <div class="card-body">
                                        <form action="/user/addAddress?source=profile" method="POST">
                                          <div class="form-group row">
                                            <div class="col">
                                              <label class="form-label" for="fullName">Full Name</label>
                                              <input placeholder="Full name" class="form-control" required type="text" name="fullName" id="fullName">
                                            </div>
                                            <div class="col">
                                              <label class="form-label" for="addressType">Address Type</label>
                                              <input placeholder="Eg:- Billing, Shipping" class="form-control" required type="text" name="addressType" id="addressType">
                                            </div>
                                          </div>
                                          <div class="form-group row">
                                            <div class="col">
                                              <label class="form-label" for="street">Street</label>
                                              <input placeholder="Enter street" class="form-control" required type="text" name="street" id="street">
                                            </div>
                                            <div class="col"><label class="form-label" for="city">City</label>
                                              <input placeholder="Enter city" class="form-control" required type="text" name="city" id="city">
                                            </div>
                                          </div>
                                          <div class="form-group row">
                                            <div class="col"><label class="form-label" for="state">State</label>
                                              <input placeholder="Enter state" class="form-control" required type="text" name="state" id="state">
                                            </div>
                                            <div class="col"><label class="form-label" for="pincode">Pincode</label>
                                              <input placeholder="Enter pincode" class="form-control" required type="text" name="pincode"
                                                id="pincode">
                                            </div>
                                          </div>
                                          <div class="form-group row">
                                            <div class="col"><label class="form-label" for="phone">Phone</label>
                                              <input placeholder="Enter phone" class="form-control" required type="text" name="phone" id="phone">
                                            </div>
                                            <div class="col"><label class="form-label" for="altPhone">Alternate
                                                Phone</label>
                                              <input placeholder="Enter alt phone" class="form-control" required type="text" name="altPhone"
                                                id="altPhone">
                                            </div>
                                          </div>
                                          <div class="form-group">
                                            <div>
                                              <button class="btn btn-sm" type="submit">Save</button>
                                            </div>
                                          </div>
                                      </div>
                                      </form>
                                    </div>
                                  </div>
                                </div>
                              </div>
                              <div class="tab-pane fade <%= locals?.tab == 'details' ? 'active show' : ''%>"
                                id="account-detail" role="tabpanel" aria-labelledby="account-detail-tab">
                                <div class="card mb-20">
                                  <div class="card-header">
                                    <h5>Edit Details</h5>
                                  </div>
                                  <div class="card-body">
                                    <form action="/user/editProfile?_method=PUT" method="POST">
                                      <div class="row">
                                        <div class="form-group col-md-6">
                                          <label for="firstName">First Name
                                          </label>
                                          <input value="<%= user.firstName %>" required="" class="form-control square"
                                            name="firstName" id="firstName" type="text" />
                                        </div>
                                        <div class="form-group col-md-6">
                                          <label for="lastName">Last Name
                                          </label>
                                          <input value="<%= user.lastName %>" required="" class="form-control square"
                                            name="lastName" id="lastName" type="text" />
                                        </div>
                                        <div class="form-group col-md-12">
                                          <label for="email">Email
                                          </label>
                                          <input value="<%= user.email %>" required="" class="form-control square"
                                            name="email" id="email" type="email" />
                                        </div>
                                        <div class="form-group col-md-12">
                                          <label for="phone">Phone
                                          </label>
                                          <input value="<%= user.phone %>" required="" class="form-control square"
                                            name="phone" id="phone" type="text" />
                                        </div>
                                        <div class="col-md-12 text-end">
                                          <button type="submit" class="btn-sm btn-fill-out submit" name="submit"
                                            value="Submit">
                                            Save
                                          </button>
                                        </div>
                                      </div>
                                    </form>
                                  </div>
                                </div>
                                <div class="card">
                                  <div class="card-header">
                                    <h5>Change Password</h5>
                                  </div>
                                  <div class="card-body">
                                    <form action="/user/changePassword?_method=PUT" id="passwordForm" method="POST">
                                      <div class="row">
                                        <div class="form-group col-md-12">
                                          <label for="currentPassword">Current Password
                                          </label>
                                          <input placeholder="Enter current password" value="" required="" class="form-control square" name="currentPassword"
                                            id="currentPassword" type="password" />
                                        </div>
                                        <div class="form-group col-md-12">
                                          <label for="newPassword">New Password
                                          </label>
                                          <input placeholder="Enter new password" value="" required="" class="form-control square" name="newPassword"
                                            id="newPassword" type="password" />
                                        </div>
                                        <div class="form-group col-md-12">
                                          <label for="confirmPassword">Confirm Password
                                          </label>
                                          <input placeholder="Confirm new password" value="" required="" class="form-control square" name="confirmPassword"
                                            id="confirmPassword" type="password" />
                                        </div>
                                        <div class="col-md-12 text-end">
                                          <button type="submit" class="btn-sm btn-fill-out submit" name="submit"
                                            value="Submit">
                                            Save
                                          </button>
                                        </div>
                                      </div>
                                    </form>
                                  </div>
                                </div>
                              </div>
                            </div>
                          </div>
                        </div>
              </div>
            </div>
          </div>
        </section>
      </main>
