<section class="content-main">
    <div class="content-header">
        <div>
            <h2 class="content-title card-title">Order detail</h2>
            <p>Details for Order ID: <%= order._id %>
            </p>
        </div>
        <div>
            <a class="btn-sm btn-secondary" href="/admin/orders">Back</a>
        </div>
    </div>
    <div class="card">
        <header class="card-header">
            <div class="row align-items-center">
                <div class="col-10 mb-lg-0 mb-15">
                    <span>
                        <i class="material-icons md-calendar_today"></i>
                        <b>
                            <%= moment(order.createdAt).format("dddd, MMMM Do YYYY, h:mm:ss a"); %>
                        </b>
                    </span>
                    <br />
                    <small class="text-muted">Order ID: 3453012</small>
                </div>
                <div class="col-2 mb-lg-0 mb-15">
                    <a onclick="window.print()" title="Print order details" class="btn btn-secondary print ms-2"><i
                            class="icon material-icons md-print"></i></a>
                </div>
            </div>
        </header>
        <div class="card-body">
            <div class="row mb-30 mt-20 order-info-wrap">
                <div class="col-md-4 bg-body p-4 border-end">
                    <article class="icontext align-items-start">
                        <div class="text">
                            <h6 class="mb-1">Customer</h6>
                            <p class="mb-1">
                                Name: <%= order.customerName %> <br />
                                    Email: <%= order.customerEmail %><br />
                                        Phone: <%= order.customerPhone %><br />
                                            Alt Phone: <%= order.customerAltPhone %><br />
                            </p>
                        </div>
                    </article>
                </div>
                <div class="col-md-4 bg-body p-4 border-end">
                    <article class="icontext align-items-start">
                        <div class="text">
                            <h6 class="mb-1">Deliver to</h6>
                            <p class="mb-1">
                                Street: <%= order.street %> <br />
                                    City: <%= order.city %><br />
                                        State: <%= order.state %><br />
                                            Pincode: <%= order.pincode %><br />
                            </p>
                        </div>
                    </article>
                </div>
                <div class="col-md-4 bg-body p-4">
                    <article class="icontext align-items-start">
                        <div class="text">
                            <h6 class="mb-1">Payment details</h6>
                            <p class="mb-1 text-capitalize">
                                Type: <%= order.paymentMethod %> <br />
                            </p>
                        </div>
                    </article>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-7">
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th width="40%">Product</th>
                                    <th width="20%">Unit Price</th>
                                    <th width="20%">Quantity</th>
                                    <th width="20%" class="text-end">Total</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% order.products.forEach(product=> { %>
                                    <tr>
                                        <td>
                                            <a class="itemside" href="#">
                                                <div class="left">
                                                    <img src="data:<%= product.productImages[0].contentType %>;base64,<%= product.productImages[0].image.toString('base64') %>"
                                                        width="40" height="40" class="img-xs" alt="Item" />
                                                </div>
                                                <div class="info">
                                                    <%= product.productName %>
                                                </div>
                                            </a>
                                        </td>
                                        <td>₹<%= product.salePrice %>
                                        </td>
                                        <td>
                                            <%= product.quantity%>
                                        </td>
                                        <td class="text-end">
                                            ₹<%= product.quantity * product.salePrice %>
                                        </td>
                                    </tr>
                                    <% }) %>
                                        <tr>
                                            <td colspan="4">
                                                <article class="float-end">
                                                    <dl class="dlist">
                                                        <dt>Subtotal:</dt>
                                                        <dd>₹<%= order.totalAmount %>
                                                        </dd>
                                                    </dl>
                                                    <dl class="dlist">
                                                        <dt>Shipping cost:</dt>
                                                        <dd>₹<%= order.shippingCharge %>
                                                        </dd>
                                                    </dl>
                                                    <dl class="dlist">
                                                        <dt>Grand total:</dt>
                                                        <dd>
                                                            <b class="h5">₹<%= order.totalAmount + order.shippingCharge
                                                                    %></b>
                                                        </dd>
                                                    </dl>
                                                    <dl class="dlist">
                                                        <dt>Status:</dt>
                                                        <dd>
                                                            <span
                                                                class="badge rounded-pill text-capitalize <%= order.status == 'pending' ? 'alert-warning text-warning' : order.status == 'cancelled' ? 'alert-danger text-danger' : order.status == 'delivered' ? 'alert-success text-success' : 'alert-primary' %>">
                                                                <%= order.status %>
                                                            </span>
                                                        </dd>
                                                    </dl>
                                                </article>
                                            </td>
                                        </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>