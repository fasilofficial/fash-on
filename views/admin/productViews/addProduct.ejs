<div class="content-main">
  <div class="content-header">
    <h1 class="h2">Add Product</h1>
  </div>
  <div class="container">
    <form action="/admin/products/add" method="POST" enctype="multipart/form-data">
      <div class="row form-group mb-4">
        <div class="col">
          <label for="productName">Product Name:</label>
          <input class="form-control" type="text" name="productName" value="" placeholder="Enter product name"
            id="productName" required />
        </div>
        <div class="col">
          <label for="brand">Brand:</label>
          <input class="form-control" type="text" name="brand" value="" placeholder="Enter brand" id="brand" required />
        </div>
      </div>
      <div class="row form-group mb-4">
        <div class="col">
          <label for="description">Description:</label>
          <input class="form-control" type="text" name="description" value="" placeholder="Enter description"
            id="description" required />
        </div>
        <div class="col">
          <label for="category">Category:</label>
          <select id="category" required class="form-select" aria-label="Default select example" name="category">
            <option selected>Select Category</option>
            <% categories.forEach(category=> { %>
              <option value="<%= category.categoryName %>">
                <%= category.categoryName[0].toUpperCase() + category.categoryName.slice(1) %>
              </option>
              <% }) %>
          </select>
        </div>
      </div>
      <div class="row form-group mb-4">
        <div class="col">
          <label for="color">Color:</label>
          <input class="form-control" type="text" name="color" value="" placeholder="Enter color" id="color" required />
        </div>

        <div class="col">
          <label for="material">Material:</label>
          <input class="form-control" type="text" name="material" value="" placeholder="Enter material" id="material"
            required />
        </div>
      </div>
      <div class="row form-group mb-4">
        <div class="col">
          <label for="stock">Stock:</label>
          <input class="form-control" type="text" name="stock" value="" placeholder="Enter no. of stock" id="stock"
            required />
        </div>
        <div class="col">
          <label for="size">Size:</label>
          <div class="form-control">
            <% sizes.forEach(size=> { %>
              <div class="form-check-inline">
                <input class="form-check-input" type="checkbox" id="inlineCheckbox1" name="sizes" value="<%= size %>" />
                <label class="form-check-label" for="inlineCheckbox1">
                  <%= size.toUpperCase() %>
                </label>
              </div>
              <% }) %>
          </div>
        </div>
      </div>
      <div class="row form-group mb-4">
        <div class="col">
          <label for="regularPrice">Regular Price:</label>
          <input class="form-control" type="text" name="regularPrice" value="" placeholder="Enter regular price"
            id="regularPrice" required />
        </div>
        <div class="col">
          <label for="salePrice">Sale Price:</label>
          <input class="form-control" type="text" name="salePrice" value="" placeholder="Enter salePrice" id="salePrice"
            required />
        </div>
      </div>
      <div class="form-group mb-4">
        <label for="productImages">Product Images:</label>
        <input class="form-control" type="file" id="productImages" name="productImages" multiple />
      </div>
      <div class="form-group mb-4">
        <button type="submit" class="btn btn-primary">Submit</button>
        <a class="btn btn-secondary btn-sm" href="/admin/products">Cancel</a>
      </div>
    </form>
  </div>
</div>