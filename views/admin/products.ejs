  <body>
    <div class="screen-overlay"></div>
    <%- include('../partials/sidebar.ejs') %> 
    <main class="main-wrap">
      <%- include('../partials/admin-header.ejs') %>
      <section class="content-main">
        <div class="content-header">
          <div>
            <h2 class="content-title card-title">Products List</h2>
            <p>Browse and Manage your products</p>
          </div>
          <div>
            <a href="/admin/products/add" class="btn btn-primary btn-sm rounded"
              >Add product</a
            >
          </div>
        </div>
        <table class="table table-responsive table-striped">
          <thead>
            <tr>
              <th scope="col">#</th>
              <th scope="col">Product Name</th>
              <th scope="col">Description</th>
              <th scope="col">Category</th>
              <th scope="col">Brand</th>
              <th scope="col">Regular Price</th>
              <th scope="col">Sale Price</th>
              <th scope="col">Stock</th>
              <th scope="col" class="text-end">Actions</th>
            </tr>
          </thead>
          <tbody>
            <% products.forEach((product, id) => { %>
            <tr>
              <th scope="row"><%= id + 1 %></th>
              <td><%= product.productName %></td>
              <td><%= product.description %></td>
              <td><%= product?.category[0].toUpperCase() + product.category.slice(1) %></td>
              <td><%= product.brand %></td>
              <td>Rs.<%= product.regularPrice %></td>
              <td>Rs.<%= product.salePrice %></td>
              <td><%= product.stock %></td>
              <td class="text-end">
                <div class="d-flex flex-row justify-content-end gap-2">
                  <a
                    class="btn btn-warning"
                    href="/admin/products/edit/<%= product._id %>"
                    >Edit</a
                  >
                  <form
                    action="/admin/products/edit/<%= product._id %>?_method=DELETE"
                    method="POST"
                  >
                    <button type="submit" class="btn btn-danger">Delete</button>
                  </form>
                </div>
              </td>
            </tr>
            <% }) %>
          </tbody>
        </table>
